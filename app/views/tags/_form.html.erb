<%= simple_form_for tag, data: { controller: :color } do |f| %>
    <%= f.input :name, label: false, placeholder: "Tag Name" %>
    <%= f.input :color, 
        collection: Tag::COLORS,
        as: :radio_buttons, 
        label: false, 
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %> 
    <br>
    <%= f.submit class: "button-success" %>
<% end %>