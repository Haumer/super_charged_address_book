<% reminders.each do |day, reminders| %>
    <div class="day-reminder-group">
        <div class="reminder-group-date">
            <%= day.strftime(time_format(reminder_name)) %><span class="mini-font"><%= time_distance(Date.today, day, space: true) %></span>
        </div>
        <div class="reminder-cards">
            <% reminders.each do |reminder| %>
                <div class="reminder-card">
                    <div class="full-name">
                        <%= reminder.contacts.first.full_name %>
                    </div>
                    <%= link_to "done", reminder_path(reminder, {reminder: {contacted: !reminder.contacted}}), data: {"turbo-method": :patch}, class: "reminder-done-btn" %>
                    <% if reminder.actual_date %>
                        <%= reminder.actual_date.strftime("%b %d, %Y") %>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
<% end %>