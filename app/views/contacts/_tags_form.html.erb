<%= simple_form_for contact, data: { controller: :color } do |f| %>
  <%= f.association :tags, 
    as: :check_boxes, 
    collection: current_user.tags.pluck(:name, :color), 
    label: false, 
    input_html: { class: "tag-selector" },
    item_wrapper_class: 'tag-item' %>
  <%= button_tag type: 'submit', class: "button-secondary" do %>
      <i class="fa-solid fa-check"></i>
  <% end %>
<% end %>
