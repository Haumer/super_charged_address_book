<%= simple_form_for group do |f| %>
    <div class="name-and-color">
        <%= f.input :name, label: false, placeholder: "Group Name" %>
        <%= f.input :interval, label: false, placeholder: "Default Interval"  %>
    </div>
    <%= f.input :color,
        label: false,
        collection: Group::COLORS,
        as: :radio_buttons, 
        label: false, 
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item' %> 
    <br>
    <%= f.submit class: "button-success" %>
<% end %>

<script>
let colors = document.querySelectorAll(".tag-item")
colors.forEach(color => {
    let label = color.querySelector("label")
    let input = color.querySelector("input")
    label.style.backgroundColor = input.value
    if(input.value === "#74121D" || input.value === "#414770" || input.value === "#372248" ) {
        label.style.color = "white"
    }
})
</script>
